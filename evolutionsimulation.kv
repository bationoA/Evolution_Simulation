MainInterface:

#:set nb_rows 60
#:set nb_cols 100
#:set gen_label_width_size .1
#:set menu_start_button_width .05
#:set menu_button_Predefined_initial_state_width .12
<MainInterface>:
    orientation: 'vertical'
    padding: 0
    spacing: 0


    HorizontalMenuLayout:
        id: id_HorizontalMenuLayout
        orientation: 'horizontal'
        size_hint: (1, .07)
        padding: 10
        spacing: 10
        canvas:
            Color:
                rgba: 0, 0, 0 , .5
            Rectangle:
                size: self.size
        Label:
            id: gen_label_id_HorizontalMenuLayout
            text: self.parent.gen_label
            halign: 'left'
            valign: 'top'
            size_hint:(gen_label_width_size, .8)
            pos_hint: {"x": -gen_label_width_size/2+.1, "y": 0.1}

        Button:
            text: 'Start'
            background_color: (1, 1, 1, 1)#'resources/images/button-1.png'
            size_hint: (menu_start_button_width, 1)
            size: self.texture_size
            pos_hint: {'center_x': 0.5}
            on_press: id_HorizontalMenuLayout.start_simulation()

        Button:
            id: id_button_mark
            text: 'Mark'
            background_color: (1, 1, 1, 1)
            size_hint: (menu_button_Predefined_initial_state_width/2, 1)
            size: self.texture_size
            pos_hint: {'center_x': 1-2*menu_button_Predefined_initial_state_width}

        Button:
            id: id_button_Predefined_initial_state
            text: 'Predefined initial state'
            background_color: (1, 1, 1, 1)
            size_hint: (menu_button_Predefined_initial_state_width, 1)
            size: self.texture_size
            pos_hint: {'center_x': 1-menu_button_Predefined_initial_state_width/2}


    GridZoneLayout:
        size_hint: (1, .9)
        #canvas.before:
         #   Color:
          #      rgba: 1, 1, 1, 1
           # Rectangle:
            #    size: self.size
        SimulationGridLayout:
            id: id_SimulationGridLayout
            size_hint: (1, 1)


