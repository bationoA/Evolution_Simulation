MainInterface:

#:set nb_rows 60
#:set nb_cols 100
#:set gen_label_width_size .1
#:set menu_start_button_width .04
<MainInterface>:
    orientation: 'vertical'
    padding: 0
    spacing: 0


    HorizontalMenuLayout:
        id: id_HorizontalMenuLayout
        orientation: 'horizontal'
        size_hint: (1, .07)
        padding: 10
        spacing: 10
        canvas:
            Color:
                rgba: 0, 0, 0 , .9
            Rectangle:
                size: self.size

        Button:
            id: id_button_reset_grid
            # text: 'R'
            background_normal: id_HorizontalMenuLayout.reset_btn_logo
            # background_color: (1, 1, 1, 1)
            size_hint: (menu_start_button_width*.7, .85)
            # size: self.texture_size
            pos_hint: {'center_x': 0.02}
            # on_press: id_SimulationBoxLayout.reset_grid()

        Label:
            id: gen_label_id_HorizontalMenuLayout
            text: id_SimulationBoxLayout.generation
            halign: 'left'
            valign: 'top'
            size_hint:(gen_label_width_size, .8)
            pos_hint: {"x": -gen_label_width_size/2+.1, "y": 0.1}

        Button:
            id: id_restart_button
            # text: 'Restart'
            background_normal: id_HorizontalMenuLayout.restart_btn_logo
            background_color: (1, 1, 1, 1)
            size_hint: (menu_start_button_width, .9)
            size: self.texture_size
            pos_hint: {'center_x': 0.4}
            # on_press: id_SimulationBoxLayout.start_simulation()

        Button:
            id: id_start_button
            # text: 'Start'
            background_normal: id_HorizontalMenuLayout.start_btn_logo
            background_color: (1, 1, 1, 1)
            size_hint: (menu_start_button_width, .9)
            size: self.texture_size
            pos_hint: {'center_x': 0.5}
            # on_press: id_SimulationBoxLayout.start_simulation()

        Button:
            id: id_button_delete
            # text: 'Save'
            background_normal: id_HorizontalMenuLayout.save_btn_logo
            background_color: (1, 0, 0, .5)
            size_hint: (menu_start_button_width*.6, .6)
            size: self.texture_size
            pos_hint: {'center_x': .6}
            # on_release: id_SimulationBoxLayout.on_save_icon_clicked()

        Button:
            id: id_button_save
            # text: 'Save'
            background_normal: id_HorizontalMenuLayout.save_btn_logo
            background_color: (1, 1, 1, 1)
            size_hint: (menu_start_button_width*.6, .6)
            size: self.texture_size
            pos_hint: {'center_x': .9}
            # on_release: id_SimulationBoxLayout.on_save_icon_clicked()

        Button:
            id: id_button_bookmarks_state
            text: 'Bookmarks'
            background_normal: id_HorizontalMenuLayout.predefined_btn_logo
            background_color: (1, 1, 1, 1)
            size_hint: (menu_start_button_width*1.8, .7)
            size: self.texture_size
            pos_hint: {'center_x': 1-menu_start_button_width*.9}


    GridZoneLayout:
        size_hint: (1, .9)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
        SimulationBoxLayout:
            id: id_SimulationBoxLayout
            size_hint: (1, 1)


